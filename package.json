{
  "name": "create-ts-starter",
  "version": "2.5.0",
  "description": "Typescript Opinionated Starter / Boilerplate for Node.js projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/saostad/node-typescript-starter.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/setup",
  "scripts": {
    "format": "prettier --check \"src/**/*.ts\" --write",
    "lint": "eslint --ext \".ts,.js\" src --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "gen-docs": "typedoc",
    "postgen-docs": "node ./config/github.js",
    "tag": "node ./config/tag.js",
    "auto-changelog": "auto-changelog --hide-credit --breaking-pattern \"breaking:\"",
    "gen-changelog": "npm run auto-changelog && git add CHANGELOG.md && git commit -m \"doc: change log\"",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "prepublishOnly": "npm-run-all -s tsc gen-docs",
    "postpublish": "npm-run-all -s tag gen-changelog",
    "precompile": "tsc",
    "compile": "pkg ./dist/index.js --out-path ./compile --options max_old_space_size=4096",
    "docker:build": "node ./config/docker-build.js",
    "inspect": "node --inspect --unhandled-rejections=strict dist/index.js",
    "predev:scripts": "npm-run-all -s tsc",
    "dev:scripts": "npm-run-all -p tsc:watch inspect",
    "dev": "set NODE_ENV=development&& nodemon --watch dist --exec \"npm run dev:scripts\"",
    "start": "npm run dev",
    "prod": "set NODE_ENV=production&& node --unhandled-rejections=strict dist/index.js"
  },
  "keywords": [
    "node",
    "typescript",
    "boilerplate",
    "starter"
  ],
  "author": "Saeid Ostad",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "auto-changelog": "^2.2.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "fast-node-logger": "^1.4.8"
  }
}
